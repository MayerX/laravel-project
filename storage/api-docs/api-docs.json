{
    "openapi": "3.0.0",
    "info": {
        "title": "Bmeirs2020",
        "description": "Bmeirs2020API文档",
        "version": "0.1"
    },
    "paths": {
        "/index": {
            "get": {
                "description": "首页",
                "operationId": "IndexController",
                "responses": {
                    "200": {
                        "description": "展示首页"
                    }
                }
            }
        },
        "/articles/{postid}": {
            "get": {
                "tags": [
                    "文章"
                ],
                "description": "展示文章",
                "parameters": [
                    {
                        "name": "postid",
                        "in": "path",
                        "description": "文章id",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Post"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Not Fount"
                    }
                }
            }
        },
        "/articles/tag/{category}": {
            "get": {
                "tags": [
                    "文章"
                ],
                "description": "文章列表",
                "parameters": [
                    {
                        "name": "category",
                        "in": "path",
                        "description": "标签id",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Post"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Not Fount"
                    }
                }
            }
        },
        "/articles": {
            "get": {
                "tags": [
                    "文章"
                ],
                "description": "所有文章",
                "parameters": [],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Post"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Not Fount"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Post": {
                "type": "object",
                "properties": {
                    "postid": {
                        "type": "number"
                    },
                    "parentid": {
                        "type": "number"
                    },
                    "poster": {
                        "type": "number"
                    },
                    "title": {
                        "type": "string"
                    },
                    "content": {
                        "type": "string"
                    },
                    "post": {
                        "type": "string"
                    },
                    "category": {
                        "type": "number"
                    },
                    "timesofview": {
                        "type": "number"
                    }
                }
            }
        }
    },
    "security": [
        []
    ]
}
